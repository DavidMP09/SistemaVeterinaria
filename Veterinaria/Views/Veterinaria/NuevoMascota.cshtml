@model Veterinaria.Models.EntidadMascota

@{
    ViewBag.Title = "NuevoMascota";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listacliente = ViewBag.listacliente;
    var listahistorial = ViewBag.listahistorial;
    var listacalendario = ViewBag.listacalendario;

}


<nav class="full-box navbar-info">
    <a href="#" class="float-left show-nav-lateral">
        <i class="fas fa-exchange-alt"></i>
    </a>
    <a href="user-update.html">
        <i class="fas fa-user-cog"></i>
    </a>
    <a href="#" class="btn-exit-system">
        <i class="fas fa-power-off"></i>
    </a>
</nav>

<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-plus fa-fw"></i> &nbsp; AGREGAR MASCOTA
    </h3>
    <p class="text-justify">

    </p>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong>  @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
</div>

<!-- Content here-->
<div class="container-fluid">
    <form action="@Url.Action("AgregarMascota", "Veterinaria")" method="post" class="form-neon" autocomplete="off">
        <fieldset>
            <legend><i class="fas fa-users fa-fw"></i> &nbsp; Información básica</legend>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Nombre</label>
                            <input type="text" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,40}" class="form-control" name="nombre" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Descripcion</label>
                            <input type="text" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,40}"  class="form-control" name="descripcion" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">PesoPromedio</label>
                            <input type="number"  class="form-control" step="0.01" name="pesoPromedio" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">PesoActual</label>
                            <input type="number" class="form-control" step="0.01" name="pesoActual" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>FechaNacimiento</label>
                            <input type="date" class="form-control" name="fechaNacimiento" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Cliente</label>
                            <select class="form-control" name="cbocliente">
                                <option>Seleccione una opción</option>
                                @foreach (var item in listacliente)
                                {
                                    <option value="@item.idcliente">@item.nombre</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Historial</label>
                            <select class="form-control" name="cbohistorial">
                                <option>Seleccione una opción</option>
                                @foreach (var item in listahistorial)
                                {
                                    <option value="@item.idhistorial">@item.fecha</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Calendario</label>
                            <select class="form-control" name="cbocalendario">
                                <option>Seleccione una opción</option>
                                @foreach (var item in listacalendario)
                                {
                                    <option value="@item.idcalendario">@item.fecha</option>
                                }

                            </select>
                        </div>
                    </div>


                </div>
            </div>
        </fieldset>
        
        <p class="text-center" style="margin-top: 40px;">
            <button type="reset" class="btn btn-raised btn-secondary btn-sm"><i class="fas fa-paint-roller"></i> &nbsp; LIMPIAR</button>
            &nbsp; &nbsp;
            <button type="submit" class="btn btn-raised btn-info btn-sm"><i class="far fa-save"></i> &nbsp; GUARDAR</button>
        </p>
    </form>
</div>