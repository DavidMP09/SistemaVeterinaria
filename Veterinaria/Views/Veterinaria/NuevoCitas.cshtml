@model Veterinaria.Models.EntidadCitas

@{
    ViewBag.Title = "NuevoCitas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listacliente = ViewBag.listacliente;
    var listaservicios = ViewBag.listaservicios;
    var listamascota = ViewBag.listamascota;
    var listaveterinario = ViewBag.listaveterinario;

}


<nav class="full-box navbar-info">
    <a href="#" class="float-left show-nav-lateral">
        <i class="fas fa-exchange-alt"></i>
    </a>
    <a href="user-update.html">
        <i class="fas fa-user-cog"></i>
    </a>
    <a href="#" class="btn-exit-system">
        <i class="fas fa-power-off"></i>
    </a>
</nav>

<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-plus fa-fw"></i> &nbsp; AGREGAR CITA
    </h3>
    <p class="text-justify">

    </p>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong>  @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
</div>

<!-- Content here-->
<div class="container-fluid">
    <form action="@Url.Action("AgregarCitas", "Veterinaria")" method="post" class="form-neon" autocomplete="off">
        <fieldset>
            <legend><i class="fas fa-users fa-fw"></i> &nbsp; Información básica</legend>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Fecha</label>
                            <input type="date" class="form-control" name="fechar" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Hora</label>
                            <input type="time" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,40}" class="form-control" name="hora" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Estado</label>
                            <input type="text" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,40}" class="form-control" name="estado" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Cliente</label>
                            <select class="form-control" name="cbocliente">
                                <option>Seleccione una opción</option>
                                @foreach (var item in listacliente)
                                {
                                    <option value="@item.idcliente">@item.nombre</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Servicio</label>
                            <select class="form-control" name="cboservicio">
                                <option>Seleccione una opción</option>
                                @foreach (var item in listaservicios)
                                {
                                    <option value="@item.idservicios">@item.nombre</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Mascota</label>
                            <select class="form-control" name="cbomascota">
                                <option>Seleccione una opción</option>
                                @foreach (var item in listamascota)
                                {
                                    <option value="@item.idmascota">@item.nombre</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Veterinario</label>
                            <select class="form-control" name="cboveterinario">
                                <option>Seleccione una opción</option>
                                @foreach (var item in listaveterinario)
                                {
                                    <option value="@item.idveterinario">@item.nombre</option>
                                }

                            </select>
                        </div>
                    </div>


                </div>
            </div>
        </fieldset>

        <p class="text-center" style="margin-top: 40px;">
            <button type="reset" class="btn btn-raised btn-secondary btn-sm"><i class="fas fa-paint-roller"></i> &nbsp; LIMPIAR</button>
            &nbsp; &nbsp;
            <button type="submit" class="btn btn-raised btn-info btn-sm"><i class="far fa-save"></i> &nbsp; GUARDAR</button>
        </p>
    </form>
</div>