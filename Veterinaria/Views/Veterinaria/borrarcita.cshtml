@model Veterinaria.Models.EntidadCitas

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>borrarcita</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong>  @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
    <div class="container-sm">
        <br />
        <br />
        <div class="card text-center">
            <div class="card-header">
                ¿Desea eliminar el Cita: @Html.DisplayTextFor(m => m.fechar)?
            </div>
            <div class="card-body">
                <h5 class="card-title">Descripcion principal</h5>
                <p class="card-text">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.idcitas)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.idcitas)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.fechar)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.fechar)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.hora)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.hora)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.estado)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.estado)
                        </dd>

                    </dl>
                </p>
                <form action="@Url.Action("eliminarcita","Veterinaria")" method="post">
                    <input type="hidden" class="form-control" name="id" value="@Html.DisplayTextFor(m => m.idcitas)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("ListarCitas","Veterinaria")">Cancelar</a>
                </form>
            </div>

        </div>
    </div>
    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
    </script>
</body>
</html>
