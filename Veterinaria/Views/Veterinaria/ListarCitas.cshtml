@model IEnumerable<Veterinaria.Models.EntidadCitas>

@{
    ViewBag.Title = "ListarCitas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav class="full-box navbar-info">
    <a href="#" class="float-left show-nav-lateral">
        <i class="fas fa-exchange-alt"></i>
    </a>
    <a href="user-update.html">
        <i class="fas fa-user-cog"></i>
    </a>
    <a href="#" class="btn-exit-system">
        <i class="fas fa-power-off"></i>
    </a>
</nav>

<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; LISTA DE CITAS
    </h3>
    <p class="text-justify">

    </p>
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info">
            <strong>Info!:</strong>  @TempData["InfoMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
    else if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Exito!:</strong>  @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error!:</strong>  @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
    else if (TempData["PrimaryMessage"] != null)
    {
        <div class="alert alert-primary">
            <strong>info!:</strong>  @TempData["PrimaryMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
    else if (TempData["SecondaryMessage"] != null)
    {
        <div class="alert alert-secondary">
            <strong>info!:</strong>  @TempData["SecondaryMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <samp>&times;</samp>
            </button>
        </div>

    }
</div>

<!-- Content here-->
<div class="container-fluid">
    <div class="table-responsive">
        <table id="tablacitas" class="table table-dark table-sm">
            <thead>
                <tr class="text-center roboto-medium">
                    <th>#</th>
                    <th>FECHA</th>
                    <th>HORA</th>
                    <th>ESTADO</th>
                    <th>CLIENTE</th>
                    <th>SERVICIO</th>
                    <th>MASCOTA</th>
                    <th>VETERINARIO</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (Veterinaria.Models.EntidadCitas item in Model)
                {
                    <tr class="text-center">

                        <td>@item.idcitas</td>
                        <td>@item.fechar</td>
                        <td>@item.hora</td>
                        <td>@item.estado</td>
                        <td>@item.cliente.nombre</td>
                        <td>@item.servicios.nombre</td>
                        <td>@item.mascota.nombre</td>
                        <td>@item.veterinario.nombre</td>
                        <td>
                            <a class="btn btn-success" href="@Url.Action("editarCitas","Veterinaria", new { id= item.idcitas})">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <a class="btn btn-warning" href="@Url.Action("borrarcita","Veterinaria", new { id= item.idcitas})">
                                <i class="far fa-trash-alt"></i>
                            </a>

                        </td>


                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>
<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 4000);


</script>